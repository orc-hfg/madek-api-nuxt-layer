{
	"name": "@orc-hfg/madek-api-nuxt-layer",
	"type": "module",
	"version": "1.6.0-dev.4",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/orc-hfg/madek-api-nuxt-layer.git"
	},
	"main": "./nuxt.config.ts",
	"engines": {
		"node": "22.17.1"
	},
	"scripts": {
		"dev": "nuxt dev -p 3001 .playground",
		"dev:prepare": "nuxt prepare .playground",
		"build": "nuxt build .playground",
		"generate": "nuxt generate .playground",
		"preview": "nuxt preview .playground",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"check:eslint": "npx @eslint/config-inspector@latest",
		"check:types": "nuxt prepare && vue-tsc -b --noEmit",
		"check:unused": "NODE_NO_WARNINGS=1 knip",
		"check:issues": "concurrently \"npm run lint\" \"npm run check:types\" \"npm run check:unused\" \"npm run test\"",
		"check:node": "node ./scripts/check-node-version.mjs",
		"check:updates": "npm-check-updates --interactive --format group",
		"generate:api": "openapi-typescript ./resources/openapi.json --output ./generated/api/madek-api.d.ts --immutable --export-type --alphabetize --additional-properties",
		"upgrade": "nuxt upgrade",
		"release:patch": "node ./scripts/safe-package-release.mjs patch",
		"release:minor": "node ./scripts/safe-package-release.mjs minor",
		"release:major": "node ./scripts/safe-package-release.mjs major",
		"release:dev:patch": "node ./scripts/safe-package-release.mjs patch --development",
		"release:dev:minor": "node ./scripts/safe-package-release.mjs minor --development",
		"release:dev:major": "node ./scripts/safe-package-release.mjs major --development",
		"prepare": "husky && nuxt prepare && npm run generate:api",
		"reinstall": "rm -rf node_modules package-lock.json && npm install"
	},
	"peerDependencies": {
		"nuxt": ">=4 <5",
		"vue": ">=3.5 <4"
	},
	"dependencies": {
		"@pinia/nuxt": "0.11.2",
		"consola": "3.4.2",
		"http-status-codes": "2.3.0",
		"pinia": "3.0.3"
	},
	"devDependencies": {
		"@antfu/eslint-config": "5.0.0",
		"@nuxt/devtools": "npm:@nuxt/devtools-nightly@latest",
		"@nuxt/eslint": "1.7.1",
		"@nuxt/test-utils": "3.19.2",
		"@types/node": "24.1.0",
		"@vue/test-utils": "2.4.6",
		"concurrently": "9.2.0",
		"eslint": "9.32.0",
		"eslint-plugin-sonarjs": "3.0.4",
		"eslint-plugin-vuejs-accessibility": "2.4.1",
		"happy-dom": "18.0.1",
		"husky": "9.1.7",
		"knip": "5.62.0",
		"lint-staged": "16.1.2",
		"npm-check-updates": "18.0.2",
		"nuxt": "4.0.2",
		"openapi-typescript": "7.8.0",
		"typescript": "5.8.3",
		"vitest": "3.2.4",
		"vue": "3.5.18",
		"vue-tsc": "3.0.4"
	}
}
