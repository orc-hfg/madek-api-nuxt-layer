{
	"name": "@orc-hfg/madek-api-nuxt-layer",
	"type": "module",
	"version": "1.0.4-alpha",
	"repository": {
		"type": "git",
		"url": "https://github.com/orc-hfg/madek-api-nuxt-layer"
	},
	"main": "./nuxt.config.ts",
	"engines": {
		"node": "22.13.0"
	},
	"scripts": {
		"dev": "nuxi dev .playground",
		"dev:prepare": "nuxt prepare .playground",
		"build": "nuxt build .playground",
		"generate": "nuxt generate .playground",
		"preview": "nuxt preview .playground",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"check-eslint-config": "npx @eslint/config-inspector@latest",
		"check-types": "npx nuxi typecheck",
		"check-updates": "npx npm-check-updates --interactive --format group",
		"nuxt-upgrade": "npx nuxi upgrade",
		"generate:api": "npx openapi-typescript ./resources/openapi/swagger.json -o ./generated/api/schema.d.ts",
		"prepare-release:patch": "npm version patch -m \"chore: release %s\" && git push --follow-tags",
		"prepare-release:minor": "npm version minor -m \"chore: release %s\" && git push --follow-tags",
		"prepare-release:major": "npm version major -m \"chore: release %s\" && git push --follow-tags",
		"prepare": "husky"
	},
	"dependencies": {
		"http-status-codes": "2.3.0",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@antfu/eslint-config": "4.3.0",
		"@nuxt/eslint": "1.1.0",
		"eslint": "9.21.0",
		"eslint-plugin-sonarjs": "3.0.2",
		"husky": "9.1.7",
		"lint-staged": "15.4.3",
		"nuxt": "3.15.4",
		"openapi-typescript": "5.4.2",
		"typescript": "5.7.3",
		"vue": "3.5.13",
		"vue-tsc": "2.2.4"
	}
}
